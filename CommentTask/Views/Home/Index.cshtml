        </p>
        @foreach (var i in ViewBag.Comments)
        {
            <input type="hidden" value="@i.Id" name="Id" />

            <p>
                Author: @i.UserName      Date of Post: @i.Date
            </p>

                @i.TextComment

                foreach (var item in ViewBag.Answer)
                {
                    if (item.CommentId == i.Id)
                    {
                <p>
                    Reply: @item.Text
                </p>
                    }

                    if (item.CommentId == i.Id)
                    {
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                <form style="display: none" id="myForm" action="/Home/ReplPost">
                    <input type="hidden" value="@item.Id" name="Id" />
                    <input type="text" id="text" value="Enter Text" />
                    <input type="submit" id="submit" onclick="document.location='/Home/ReplAdd/?id=@item.CommentId&text=@item.Text'" value="Reply">
                </form>

                <input type="button" value="Reply" onclick="$('#myForm').show()" />
                        }
                    }
                }
        @using (Html.BeginForm("Comment", "Home", FormMethod.Get))
        {
            ;
            <input type="hidden" value="@ViewBag.CommentId" name="CommentId" />
            <input type="hidden" value="@ViewBag.Date" name="Date" />
            <table>
                <tr>
                    <td><p>@Html.Label("UserName", "Username") </p></td>
                    <td>@Html.TextBox("userName") </td>
                </tr>
                <tr>
                    <td><p>@Html.Label("comment", "Message")</p></td>
                    <td>
                        @Html.TextArea("comment")
                    </td>
                </tr>
                <tr><td><input type="submit" value="Send" /> </td><td></td></tr>
            </table>
        }

    </div>
</body>
</html>